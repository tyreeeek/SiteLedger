# SiteLedger Backend Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development

# CORS (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000

# PostgreSQL Database (DigitalOcean Managed Database)
DATABASE_URL=postgresql://doadmin:YOUR_PASSWORD@your-db-cluster.db.ondigitalocean.com:25060/siteledger?sslmode=require

# JWT Authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# DigitalOcean Spaces (S3-compatible storage)
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_BUCKET=your-bucket-name
SPACES_ACCESS_KEY=your-spaces-access-key
SPACES_SECRET_KEY=your-spaces-secret-key
SPACES_CDN_ENDPOINT=https://your-bucket-name.nyc3.cdn.digitaloceanspaces.com
